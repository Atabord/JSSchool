{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
      },
      "plugins": [
          "react"
      ],
      "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": 2,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "allowShortCircuit": true, 
        "allowTernary": true
    },
    "extends": ["airbnb", "plugin:react/recommended"],
    "parser": "babel-eslint"
}